




<p>
  <strong>Title:</strong>
  <%= @user.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @user.text %>
</p>

<h2>Followers</h2>
<% @user.followers.each do |follower| %>
  <p>
    <strong>Follower:</strong>
    <%= follower.follower %>
  </p>

  <p>
    <strong>Comment to User:</strong>
    <%= follower.body %>
  </p>
<% end %>

<h2>Add follower:</h2>
<%= form_for([@user, @user.followers.build]) do |f| %>
  <p>
    <%= f.label :follower %><br />
    <%= f.text_field :follower %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>



<%= link_to 'Back', users_path %>
<%= link_to 'Edit', edit_user_path(@user) %>
